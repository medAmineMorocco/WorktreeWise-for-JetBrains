    <depends>com.intellij.modules.vcs</depends>
    <incompatible-with>com.jetbrains.rust</incompatible-with>

    <idea-version since-build="222" until-build="252.*"/>

    <actions>
        <group
                id="WorktreeWise.Menu"
                text="WorktreeWise"
                description="WorktreeWise actions"
                popup="true"
                icon="/icons/icon.svg">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </group>

        <action
                id="WorktreeWiseSwitch"
                class="com.worktreewise.actions.WorktreeWiseSwitchAction"
                text="Switch Worktree"
                description="Switch between Git worktrees">
            <add-to-group group-id="WorktreeWise.Menu" anchor="first"/>
            <!-- Assign a default shortcut -->
            <keyboard-shortcut keymap="$default" first-keystroke="shift S"/>
        </action>

        <action
                id="WorktreeWiseOpenProject"
                class="com.worktreewise.actions.OpenInWorktreeWiseAction"
                text="Open in WorktreeWise"
                description="Open this project in WorktreeWise">
            <add-to-group group-id="WorktreeWise.Menu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="shift W"/>
        </action>

    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup
                id="WorktreeWise Licensing"
                displayType="BALLOON"
                isLogByDefault="false"/>
    </extensions>

</idea-plugin>
